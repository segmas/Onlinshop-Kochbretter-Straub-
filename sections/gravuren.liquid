<script>
    document.addEventListener('DOMContentLoaded', function() {
        const movieplacholderimage = document.getElementById("movieplacholderimage");
        const movie = document.getElementById("movie");
        const videodiv = document.getElementById("videodiv");
        const PlayBtn = document.getElementById("PlayBtn");

        videodiv.addEventListener("click", () => {
            movie.classList.add("active");
            movieplacholderimage.classList.add("active");
            PlayBtn.classList.add("active");
        });
    });


    /*Überwacht wenn der Bereich sichtbar ist.*/
    document.addEventListener('DOMContentLoaded', function() {
        // Ziel-Div, das überwacht werden soll
        const targetDiv = document.getElementById('Gravurendiv');

        // Intersection Observer erstellen
        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Einblenden, wenn das Ziel-Div sichtbar ist
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, {
            threshold: 0.05 // 15% des Elements muss sichtbar sein, damit die Aktion ausgeführt wird
        });

        // Überwachung des Ziel-Divs starten
        observer.observe(targetDiv);
    });











</script>




