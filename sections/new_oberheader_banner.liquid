<!--Schema-->
{% schema %}
{
    "name": "new_oberheader_banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_imgs",
            "label": "Bilder"
        }
    ],
    "presets": [
        {
            "name": "new_oberheader_banner"
        }
    ]
}
{% endschema %}

<!--CSS-->
<style>
    :root {
        --bannerbackgroundcolor: #0e0e0e; 
    }

    #new_oberheader_banner {
        top: 0;
        width: 100%;
        background: var(--bannerbackgroundcolor);
        color: #fff;
        overflow: hidden;
        height: 30px;
        display: flex;
        align-items: center;
        z-index: 9999;
    }

    .scrolling-text {
        display: flex;
        white-space: nowrap;
        animation: marquee 10s linear infinite; /* Geschwindigkeit angepasst */
    }

    .scrolling-content {
        display: inline-flex;
        align-items: center;
        margin-right: 50px; /* Abstand zwischen den doppelten Bl√∂cken */
    }

    .banner_imgs {
        height: 17px;
        margin-left: 10px;
        margin-right: 10px;
    }

    @keyframes marquee {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(-100%);
        }
    }
</style>
