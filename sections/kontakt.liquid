{% style %}
#Popupdiv {
  width: 3.8rem;
  height: 10rem;
  position: fixed;
  bottom: 1rem;
  right: 0.2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--maincolor);
  border: solid 1px white;
  color: white;
  z-index: 100;
  transition: 0.2s;
}
#Popupdiv.active {
  width: 30rem;
  flex-direction: column;
  gap: 0.3rem;
}
#KontaktP {
  transform: rotate(-90deg);
  font-size: 2.1rem;
  transition: 0.4s;
  margin: 0rem;
}
#KontaktP.active {
  display: none;
  transition: 0.2s
  
}
#Kontaktdaten {
  display: none;
  transition: 0.2s
}
#Kontaktdaten.active {
  display: flex;
  color: white;
}
#SpanIconMail {
  font-size: 2.2rem;
}
/*class="InhaltKontaktdivs"*/
.InhaltKontaktdivs{
    display: none;
    text-decoration: none; 
}
.InhaltKontaktdivs.active{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    color: white;
    font-size: 1.35rem;
}
#WhatsAppText{
    color: white;
}


{% endstyle %}


<script>
const KontaktP = document.getElementById("KontaktP");
const Popupdiv = document.getElementById("Popupdiv");
const Kontaktdaten = document.getElementById("Kontaktdaten");

const InhaltKontaktdivs = document.querySelectorAll(".InhaltKontaktdivs");



Popupdiv.addEventListener("mouseover", () =>{
        Popupdiv.classList.add("active");
    KontaktP.classList.add("active");

    InhaltKontaktdivs.forEach((element) =>{
    element.classList.add("active");
})
});

Popupdiv.addEventListener("mouseout", () =>{
    Popupdiv.classList.remove("active");
    KontaktP.classList.remove("active");

    InhaltKontaktdivs.forEach((element) =>{
    element.classList.remove("active");
})
});

</script>
