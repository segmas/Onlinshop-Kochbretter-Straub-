<!--HTML-->
<div id="new_weihnachtsbanner">
    <div id="new_weihnachtsbanner_content">
        {% for block in section.blocks %}
            {% if block.type == "titelbanner" %}
                <h2>{{ block.settings.title_text }}</h2>
            {% elsif block.type == "textbanner" %}
                <p>{{ block.settings.subtitle_text }}</p>
            {% endif %}
        {% endfor %}
    </div>
</div>




<!--Schema-->
{% schema %}
    {
        "name": "new_weihnachtsbanner",
        "settings": [
            {
                "type": "range",
                "id": "new_weihnachtsbanner_width",
                "label": "New Weihnachtsbanner Width",
                "max": 100,
                "min": 50,
                "step": 2,
                "default": 65
            }
        ],
        "blocks": [
            {
                "name": "Title Banner",
                "type": "titelbanner",
                "settings": [
                    {
                        "type": "text",
                        "id": "title_text",
                        "label": "Title Text for Banner",
                        "default": "Merry Christmas!"
                    }
                ]
            },
            {
                "name": "Text Banner",
                "type": "textbanner",
                "settings": [
                    {
                        "type": "text",
                        "id": "subtitle_text",
                        "label": "Subtitle Text for Banner",
                        "default": "Enjoy the holiday season!"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "new_weihnachtsbanner"
            }
        ]
    }
    {% endschema %}
    



<!--CSS-->
<style>
    #new_weihnachtsbanner{
        display: flex;
        align-items: center;
        justify-content: center;

        width: 100%;
        margin-left: auto;
        margin-right: auto;
    }



</style>