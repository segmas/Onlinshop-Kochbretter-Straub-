<!--HTML-->
<div id="new_info_banner">

    {% for block in section.blocks %}

        <!--Bild-->
        <img class="banner_img" src="{{ section.settings.banner_img |  image_url  }}" alt="">

        <!--Titel-->
        {% if block.type == "infobanner_titel" %}
            <h2 style="font-size: {{ block.settings.infobanner_title_text_size }}rem;" class="infobanner_title_text">{{ block.settings.infobanner_title_text }}</h2>
        {% endif %}

        <!--Text-->
        {% if block.type == "infobanner_text" %}
            <p>{{ block.settings.infobanner_paragraph_text }}</p>
        {% endif %}


        <!--Rabatt Code-->
        {% if block.type == "infobanner_rabattcode" %}
            <p>{{ block.settings.rabattcode_paragraph }}</p>
        {% endif %}

        <!--Link-->
        {%  if block.type ==  "infobanner_link"  %}  
            <a class="infobanner_link_atag" href="{{ block.settings.infobanner_link_url }}">{{ block.settings.link_text_infobanner }}</a>
        {% endif %}




    {% endfor %}

</div>



<!--Schema-->
{% schema %}
    {
        "name": "new_info_banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "background_image",
                "label": "background Image"
            },
            {
                "type": "range",
                "id": "new_info_banner_width",
                "label": "Info Banner Width",
                "max": 100,
                "min": 50,
                "step": 2,
                "default": 66
            },
            {
                "type": "range",
                "id": "new_info_banner_padding_top_bottom",
                "label": "Info Banner Padding Top Bottom",
                "max": 10,
                "min": 0,
                "step": 1,
                "default": 2
            },
            {
                "type": "color",
                "id": "new_info_banner_backgroundcolor",
                "label": "Info Banner Backgroundcolor"
            },
            {
                "type": "color",
                "id": "new_info_banner_color",
                "label": "Info Banner Color"
            },
            {
                "type": "image_picker",
                "id": "banner_img",
                "label": "Banner Img"
            }
        ],
        "blocks": [
            {
                "name": "Info Banner Title",
                "type": "infobanner_titel",
                "settings": [
                    {
                        "type": "text",
                        "id": "infobanner_title_text",
                        "label": "Info Banner Title"
                    },
                    {
                        "type": "range",
                        "id": "infobanner_title_text_size",
                        "label": "Infobanner Titel Text Size",
                        "max": 10,
                        "min": 1,
                        "step": 0.1,
                        "default": 2.5
                    }
                ]
            },
            {
                "name": "Info Banner Text",
                "type": "infobanner_text",
                "settings": [
                    {
                        "type": "text",
                        "id": "infobanner_paragraph_text",
                        "label": "Info Banner Text"
                    }
                ]
            },
            {
                "name": "Info Banner Rabattcode",
                "type": "infobanner_rabattcode",
                "settings": [
                    {
                        "type": "text",
                        "id": "rabattcode_paragraph",
                        "label": "Info Banner Rabattcode"
                    }
                ]
            },
            {
                "name": "Info Banner Link",
                "type": "infobanner_link",
                "settings": [
                    {
                        "type": "text",
                        "id": "link_text_infobanner",
                        "label": "Link Text"
                    },
                    {
                        "type": "url",
                        "id": "infobanner_link_url",
                        "label": "Infobanner Link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "new_info_banner",
                "blocks": [
                    { "type": "infobanner_titel" },
                    { "type": "infobanner_text" },
                    { "type": "infobanner_rabattcode" }
                ]
            }
        ]
    }
    {% endschema %}
    
    



<!--CSS-->
<style>
    #new_info_banner{
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        
        gap: 2rem;

        padding-left: 2rem;
        padding-right: 2rem;

        margin-top: 9rem;
        margin-bottom: 9rem;

        background-image: url( "{{ section.settings.background_image |  image_url  }}" );
        background-size: cover;
        background-repeat: no-repeat;

        padding-top: {{ section.settings.new_info_banner_padding_top_bottom }}rem;
        padding-bottom: {{ section.settings.new_info_banner_padding_top_bottom }}rem;

        /* background-color: {{ section.settings.new_info_banner_backgroundcolor }}; */
       color: {{ section.settings.new_info_banner_color }};
        
        width: {{ section.settings.new_info_banner_width }}%;

        margin-left: auto;
        margin-right: auto;

        position: relative;
    }

    /*Bild*/
    .banner_img{
        width: 10rem;
        position: absolute;
        right: -9rem;
        top: -7rem;
        z-index: 13;
    }

    /*Titel*/
    .infobanner_title_text{
        text-shadow: 2px 2px 2px black;
        color: {{ section.settings.new_info_banner_color }};
        font-weight: bold; 
    }






    /*Link*/
    .infobanner_link_atag{
        font-style: italic;
        text-decoration: none;
        background-color: {{ section.settings.new_info_banner_color }};
        color: {{ section.settings.new_info_banner_backgroundcolor}};
        font-size: 3.2rem;
        font-weight: bold;
        padding: 0.5rem 2rem;
        transition: 0.3s;
        border: solid 1px {{ section.settings.new_info_banner_color }};
    }
    .infobanner_link_atag:hover{
        background-color: {{ section.settings.new_info_banner_backgroundcolor }};
        color: {{ section.settings.new_info_banner_color}};
        border: solid 1px {{ section.settings.new_info_banner_color }};
    }


</style>