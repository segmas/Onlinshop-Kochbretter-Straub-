<!--HTML-->
<div id="new_info_banner">

    {% for block in section.blocks %}
        <!--Titel-->
        {% if block.type == "infobanner_titel" %}
            <h2>{{ block.settings.infobanner_titel }}</h2>
        {% endif %}



        
    {% endfor %}

</div>




<!--Schema-->
{% schema %}
    {
        "name": "new_info_banner",
        "settings": [
 
        ],
        "blocks": [
            {
                "name": "infobanner_titel",
                "type": "infobanner_titel",
                "limit": 1,
                "settings": [
                    {
                        "type": "text",
                        "id": "infobanner_titel",
                        "label": "Info Banner Titel"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "new_info_banner",
                "blocks": [
                    {
                        "type": "infobanner_titel"
                    }
                ]

            }
        ]
    }
    {% endschema %}
    



<!--CSS-->
<style>
    #new_info_banner{
        display: flex;
        align-items: center;
        justify-content: center;

        width: 100%;
        height: 2rem;
        margin-left: auto;
        margin-right: auto;
    }



</style>